<div class="page-header">
<h1>Alle Posts</h1>
</div>

<%= link_to "Nieuwe post", new_post_path, class:"btn btn-success" %>

<% @posts.each do |post| %>
<div class="status">
  <strong><%= post.name %></strong>
  <p><%= post.content %></p>
  <div class="meta">
   <%= link_to time_ago_in_words(post.created_at) + " ago", post %>
    <span class="admin">
       | <%= link_to "Edit", edit_post_path(post) %> |
       <%= link_to "Delete", post, method: :delete, data: { confirm: "Weet je het zeker?"} %>
    </span>
  </div>
</div>

<% end %>